################################################################################
#
# webkitgtk
#
################################################################################

WEBKITGTK4_VERSION = 2.44.2
WEBKITGTK4_SITE = https://www.webkitgtk.org/releases
WEBKITGTK4_SOURCE = webkitgtk-$(WEBKITGTK4_VERSION).tar.xz
WEBKITGTK4_INSTALL_STAGING = YES
WEBKITGTK4_LICENSE = LGPL-2.1+, BSD-2-Clause
WEBKITGTK4_LICENSE_FILES = \
	Source/WebCore/LICENSE-APPLE \
	Source/WebCore/LICENSE-LGPL-2.1
WEBKITGTK4_CPE_ID_VENDOR = webkitgtk
WEBKITGTK4_DEPENDENCIES = host-ruby host-python3 host-gperf host-unifdef \
	enchant harfbuzz icu jpeg libegl libepoxy libgcrypt libgtk4 libsecret \
	libsoup3 libtasn1 libxml2 libxslt sqlite webp woff2

WEBKITGTK4_CMAKE_BACKEND = ninja

WEBKITGTK4_CONF_OPTS = \
	-DENABLE_API_TESTS=OFF \
	-DENABLE_DOCUMENTATION=OFF \
	-DENABLE_GEOLOCATION=OFF \
	-DENABLE_MINIBROWSER=ON \
	-DENABLE_SPELLCHECK=ON \
	-DENABLE_WEB_RTC=OFF \
	-DPORT=GTK \
	-DUSE_AVIF=OFF \
	-DUSE_GTK4=ON \
	-DUSE_LIBHYPHEN=OFF \
	-DUSE_WOFF2=ON

ifeq ($(BR2_PACKAGE_WEBKITGTK4_SANDBOX),y)
WEBKITGTK4_CONF_OPTS += \
	-DENABLE_BUBBLEWRAP_SANDBOX=ON \
	-DBWRAP_EXECUTABLE=/usr/bin/bwrap \
	-DDBUS_PROXY_EXECUTABLE=/usr/bin/xdg-dbus-proxy
WEBKITGTK4_DEPENDENCIES += libseccomp
else
WEBKITGTK4_CONF_OPTS += -DENABLE_BUBBLEWRAP_SANDBOX=OFF
endif

ifeq ($(BR2_PACKAGE_WEBKITGTK4_MULTIMEDIA),y)
WEBKITGTK4_CONF_OPTS += \
	-DENABLE_VIDEO=ON \
	-DENABLE_WEB_AUDIO=ON \
	-DENABLE_WEB_CODECS=ON
WEBKITGTK4_DEPENDENCIES += gstreamer1 gst1-libav gst1-plugins-bad gst1-plugins-base
else
WEBKITGTK4_CONF_OPTS += \
	-DENABLE_VIDEO=OFF \
	-DENABLE_WEB_AUDIO=OFF \
	-DENABLE_WEB_CODECS=OFF
endif

ifeq ($(BR2_PACKAGE_WEBKITGTK4_WEBDRIVER),y)
WEBKITGTK4_CONF_OPTS += -DENABLE_WEBDRIVER=ON
else
WEBKITGTK4_CONF_OPTS += -DENABLE_WEBDRIVER=OFF
endif

ifeq ($(BR2_PACKAGE_WEBKITGTK4_MINIBROWSER),y)
define WEBKITGTK4_INSTALL_MINIBROWSER_SYMLINK
	ln -sf ../libexec/webkit2gtk-4.1/MiniBrowser $(TARGET_DIR)/usr/bin/MiniBrowser
endef
WEBKITGTK4_POST_INSTALL_TARGET_HOOKS += WEBKITGTK4_INSTALL_MINIBROWSER_SYMLINK
WEBKITGTK4_CONF_OPTS += -DENABLE_MINIBROWSER=ON
else
WEBKITGTK4_CONF_OPTS += -DENABLE_MINIBROWSER=OFF
endif

ifeq ($(BR2_PACKAGE_LCMS2),y)
WEBKITGTK4_CONF_OPTS += -DUSE_LCMS=ON
WEBKITGTK4_DEPENDENCIES += lcms2
else
WEBKITGTK4_CONF_OPTS += -DUSE_LCMS=OFF
endif

ifeq ($(BR2_PACKAGE_GOBJECT_INTROSPECTION),y)
WEBKITGTK4_CONF_OPTS += -DENABLE_INTROSPECTION=ON
WEBKITGTK4_DEPENDENCIES += gobject-introspection
else
WEBKITGTK4_CONF_OPTS += -DENABLE_INTROSPECTION=OFF
endif

ifeq ($(BR2_PACKAGE_LIBBACKTRACE),y)
WEBKITGTK4_CONF_OPTS += -DUSE_LIBBACKTRACE=ON
WEBKITGTK4_DEPENDENCIES += libbacktrace
else
WEBKITGTK4_CONF_OPTS += -DUSE_LIBBACKTRACE=OFF
endif

ifeq ($(BR2_PACKAGE_LIBDRM),y)
WEBKITGTK4_CONF_OPTS += -DUSE_LIBDRM=ON
WEBKITGTK4_DEPENDENCIES += libdrm
else
WEBKITGTK4_CONF_OPTS += -DUSE_LIBDRM=OFF
endif

ifeq ($(BR2_PACKAGE_LIBJXL),y)
WEBKITGTK4_CONF_OPTS += -DUSE_JPEGXL=ON
WEBKITGTK4_DEPENDENCIES += libjxl
else
WEBKITGTK4_CONF_OPTS += -DUSE_JPEGXL=OFF
endif

ifeq ($(BR2_PACKAGE_LIBMANETTE),y)
WEBKITGTK4_CONF_OPTS += -DENABLE_GAMEPAD=ON
WEBKITGTK4_DEPENDENCIES += libmanette
else
WEBKITGTK4_CONF_OPTS += -DENABLE_GAMEPAD=OFF
endif

ifeq ($(BR2_PACKAGE_HAS_LIBGBM),y)
WEBKITGTK4_CONF_OPTS += -DUSE_GBM=ON
WEBKITGTK4_DEPENDENCIES += libgbm
else
WEBKITGTK4_CONF_OPTS += -DUSE_GBM=OFF
endif

ifeq ($(BR2_PACKAGE_LIBGTK3_X11),y)
WEBKITGTK4_CONF_OPTS += -DENABLE_X11_TARGET=ON
WEBKITGTK4_DEPENDENCIES += libgl \
	xlib_libXcomposite xlib_libXdamage xlib_libXrender xlib_libXt
else
WEBKITGTK4_CONF_OPTS += -DENABLE_X11_TARGET=OFF
endif

ifeq ($(BR2_PACKAGE_LIBGTK3_WAYLAND),y)
WEBKITGTK4_CONF_OPTS += -DENABLE_WAYLAND_TARGET=ON
else
WEBKITGTK4_CONF_OPTS += -DENABLE_WAYLAND_TARGET=OFF
endif

ifeq ($(BR2_PACKAGE_WEBKITGTK4_USE_GSTREAMER_GL),y)
WEBKITGTK4_CONF_OPTS += -DUSE_GSTREAMER_GL=ON
else
WEBKITGTK4_CONF_OPTS += -DUSE_GSTREAMER_GL=OFF
endif

ifeq ($(BR2_INIT_SYSTEMD),y)
WEBKITGTK4_CONF_OPTS += -DENABLE_JOURNALD_LOG=ON
WEBKITGTK4_DEPENDENCIES += systemd
else
WEBKITGTK4_CONF_OPTS += -DENABLE_JOURNALD_LOG=OFF
endif

# JIT is not supported for MIPS r6, but the WebKit build system does not
# have a check for these processors. The same goes for ARMv5 and ARMv6.
# Disable JIT forcibly here and use the CLoop interpreter instead.
#
# Also, we have to disable the sampling profiler and webassembly,
# which does NOT work with ENABLE_C_LOOP.
#
# Upstream bugs: https://bugs.webkit.org/show_bug.cgi?id=191258
#                https://bugs.webkit.org/show_bug.cgi?id=172765
#                https://bugs.webkit.org/show_bug.cgi?id=265218
#
ifeq ($(BR2_ARM_CPU_ARMV5)$(BR2_ARM_CPU_ARMV6)$(BR2_MIPS_CPU_MIPS32R6)$(BR2_MIPS_CPU_MIPS64R6),y)
WEBKITGTK4_CONF_OPTS += -DENABLE_JIT=OFF -DENABLE_C_LOOP=ON \
	-DENABLE_SAMPLING_PROFILER=OFF \
	-DENABLE_WEBASSEMBLY=OFF
endif

$(eval $(cmake-package))
